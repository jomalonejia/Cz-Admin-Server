<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cz.mapper.ItemMapper">

    <resultMap id="item" type="com.cz.model.Item">
        <id property="itemId" column="item_id"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
        <result property="image" column="image"/>
        <result property="describe" column="describe"/>
        <association property="category" column="category" javaType="com.cz.model.Category">
            <id property="categoryId" column="category_id"/>
            <result property="parentCategoryId" column="parent_category_id"/>
            <result property="categoryName" column="category_name"/>
        </association>
    </resultMap>


    <select id="listItems" resultMap="item">
        SELECT
        item.item_id,
        item.name,
        item.price,
        item.image,
        item.describe,
        category.category_id,
        category.category_name,
        category.parent_category_id
        FROM
        sys_item item
        LEFT JOIN sys_category category on item.category_id = category.category_id
    </select>

</mapper>