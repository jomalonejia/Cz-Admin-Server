<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cz.mapper.UserMapper">
    <!-- 通用查询结果列-->
    <sql id="Base_Column_List">
        id, name, age
    </sql>
    
    <resultMap id="userDetail" type="com.cz.model.User">
        <id column="u_id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="first_name" property="firstName"/>
        <result column="last_name" property="lastName"/>
        <result column="email" property="email"/>
        <result column="enabled" property="enabled" javaType="boolean"/>
        <result column="img_url" property="imgUrl"/>
        <collection property="roles" ofType="com.cz.model.Role" javaType="ArrayList" column="ur_id">
            <id column="r_id" property="id"></id>
            <result column="role_name" property="roleName"/>
        </collection>
    </resultMap>


    <select id="loadUserByUsername" resultMap="userDetail" parameterType="java.lang.String" >
        select
            u.id as u_id,
            u.username,
            u.password,
            u.first_name,
            u.last_name,
            u.email,
            u.enabled,
            u.img_url,
            r.id as r_id,
            r.role_name,
            ur.id as ur_id,
            ur.user_id,
            ur.role_id
        from sys_user u
            left outer join sys_user_role ur on u.id=ur.user_id
            left outer join sys_role r on r.id= ur.role_id
        WHERE u.username = #{username}
    </select>

    <select id="listAllUser" resultMap="userDetail">
        select
        u.id as u_id,
        u.username,
        u.password,
        u.first_name,
        u.last_name,
        u.email,
        u.enabled,
        u.img_url,
        r.id as r_id,
        r.role_name,
        ur.id as ur_id,
        ur.user_id,
        ur.role_id
        from sys_user u
        left outer join sys_user_role ur on u.id=ur.user_id
        left outer join sys_role r on r.id= ur.role_id
    </select>


</mapper>